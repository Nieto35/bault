    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(245, 158, 11, 0.4);
  }
  
  .button-arrow {
    transition: transform 0.3s ease;
  }
  
  .cta-button:hover .button-arrow {
    transform: translateX(4px);
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-5px);
    }
  }
  
  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.8;
    }
  }
  
  @media (max-width: 768px) {
    .vault-safe {
      width: 250px;
      height: 250px;
    }
    
    .dial-container {
      width: 100px;
      height: 100px;
    }
    
    .number {
      transform-origin: 50% 42px;
    }
    
    .dial-center {
      width: 16px;
      height: 16px;
    }
    
    .content-section h2 {
      font-size: 2rem;
    }
    
    .content-section p {
      font-size: 1.125rem;
    }
    
    .feature-icons {
      gap: 1rem;
    }
    
    .icon {
      font-size: 2rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const dial = document.getElementById('dial');
    const safeDoor = document.getElementById('safeDoor');
    const safeInterior = document.getElementById('safeInterior');
    const contentSections = document.querySelectorAll('.content-section');
    const vaultContainer = document.querySelector('.vault-container');
    
    let rotation = 0;
    let currentSection = 0;
    
    const handleScroll = () => {
      const scrollY = window.scrollY;
      const containerHeight = vaultContainer.offsetHeight;
      const windowHeight = window.innerHeight;
      const maxScroll = containerHeight - windowHeight;
      const scrollProgress = Math.min(scrollY / maxScroll, 1);
      
      // Rotar el dial basado en el scroll (m√∫ltiples vueltas)
      rotation = scrollProgress * 1440; // 4 vueltas completas
      if (dial) {
        dial.style.transform = `rotate(${rotation}deg)`;
      }
      
      // Determinar qu√© secci√≥n mostrar
      const totalSections = contentSections.length;
      const sectionProgress = scrollProgress * (totalSections - 1);
      const newSection = Math.floor(sectionProgress);
      
      // Cambiar contenido si es necesario
      if (newSection !== currentSection && newSection < totalSections) {
        // Ocultar secci√≥n actual
        contentSections[currentSection]?.classList.remove('active');
        
        // Mostrar nueva secci√≥n
        currentSection = newSection;
        contentSections[currentSection]?.classList.add('active');
      }
      
      // Abrir la puerta en la √∫ltima secci√≥n
      if (scrollProgress > 0.85) {
        safeDoor?.classList.add('open');
        safeInterior?.classList.add('visible');
      } else {
        safeDoor?.classList.remove('open');
        safeInterior?.classList.remove('visible');
      }
    };
    
    // Throttle scroll events para mejor rendimiento
    let ticking = false;
    const onScroll = () => {
      if (!ticking) {
        requestAnimationFrame(() => {
          handleScroll();
          ticking = false;
        });
        ticking = true;
      }
    };
    
    window.addEventListener('scroll', onScroll);
    
    // Inicializar primera secci√≥n
    if (contentSections.length > 0) {
      contentSections[0].classList.add('active');
    }
    
    // Inicializar
    handleScroll();
  });
</script>